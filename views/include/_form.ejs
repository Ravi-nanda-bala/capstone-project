 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Price</label>
            <input type="text" name="email" value="" placeholder="$">
        </div>
        <div class="form-group">
            <label for="Category" class="text-light">Category</label>
            <input type="text" name="category" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="Quantity" class="text-light">Quantity</label>
            <input type="text" name="quantity" value="" placeholder="">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
